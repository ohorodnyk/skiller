{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-react-hooks",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["*.json", "**/*.json"]
  },
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "deprecation": {
      "options": [true],
      "severity": "warn"
    },
    "interface-name": [true, "never-prefix"],
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "jsx-no-multiline-js": false,
    "react-hooks-nesting": "error"
  }
}
