{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es6", "dom", "scripthost", "es2016.array.include", "webworker"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist"]
}
